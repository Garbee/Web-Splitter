{
  "name": "web-splitter",
  "version": "0.0.0",
  "description": "Webcomponent web-splitter following open-wc recommendations",
  "author": "web-splitter",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "esbuild src/WebSplitter.ts --sourcemap --bundle --outfile=dist/WebSplitter.js",
    "start": "web-dev-server",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "test": "web-test-runner \"test/**/*.test.js\" --esbuild-target auto --coverage --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner --watch"
  },
  "dependencies": {
    "@microsoft/fast-element": "^1.0.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.5.32",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "@web/dev-server": "^0.1.8",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-playwright": "^0.8.4",
    "esbuild": "^0.8.56",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "playwright": "^1.9.1",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
